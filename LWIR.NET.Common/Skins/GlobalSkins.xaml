                                        <Rectangle.RenderTransform>
                                            <TranslateTransform Y="5"/>
                                        </Rectangle.RenderTransform>
                                    </Rectangle>

                                    <Rectangle Stroke="Transparent" StrokeThickness="0" Fill="{StaticResource SysBorderBrush}" Width="4.0" VerticalAlignment="Bottom" HorizontalAlignment="Center"

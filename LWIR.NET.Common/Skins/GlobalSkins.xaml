                        <Path x:Name="PART_THUMB" Data="M0,-10 L10,-10 L10,10 L0,10Z" Stroke="{StaticResource SysBorderBrush}" StrokeThickness="1" Fill="{StaticResource SysNoClientBrush}"/>
                    </Canvas>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Fill" TargetName="PART_THUMB" Value="{StaticResource SysClientBrush}"/>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="true">
                            <Setter Property="Fill" TargetName="PART_THUMB" Value="{StaticResource SysClientBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Fill" TargetName="PART_THUMB" Value="{StaticResource SysNoClientBrush}"/>
                            <Setter Property="Stroke" TargetName="PART_THUMB" Value="{StaticResource SysNoClientBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

